{
  "private": true,
  "scripts": {
    "dev": "turbo dev --no-daemon",
    "dev:docs": "turbo dev --no-daemon --filter=docs",
    "dev:web": "turbo dev --no-daemon --filter=web",
    "build": "turbo build --no-daemon",
    "build:docs": "turbo build --no-daemon --filter=docs --filter=ui",
    "build:web": "turbo build --no-daemon --filter=web --filter=ui",
    "start:web": "turbo start --no-daemon --filter=web",
    "start:docs": "turbo start --no-daemon --filter=docs",
    "start": "turbo start --no-daemon",
    "lint": "turbo lint --no-daemon",
    "clean": "turbo clean --no-daemon",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "eslint": "^7.32.0",
    "eslint-config-custom": "workspace:*",
    "prettier": "^2.7.1",
    "prettier-plugin-tailwindcss": "^0.1.11",
    "turbo": "^1.10.9"
  }
}
