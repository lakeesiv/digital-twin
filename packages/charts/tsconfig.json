{
  "extends": "tsconfig/react-library.json",
  "include": [".", "plotly.js.d.ts"],
  "exclude": ["dist", "build", "node_modules"],
  "compilerOptions": {
    "lib": ["es2017", "dom"],
    "module": "ESNext",
    "target": "ES6",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "react": ["./node_modules/@types/react"]
    }
  }
}
